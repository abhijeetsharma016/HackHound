<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Green Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#15BE77" /> <!-- Green border color -->
            <corners android:radius="15dp" /> <!-- Rounded corners for the border -->
        </shape>
    </item>

    <!-- White Background -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
            <corners android:radius="15dp" /> <!-- Match corner radius of the border -->
        </shape>
    </item>
</layer-list>
